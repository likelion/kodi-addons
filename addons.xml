<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.image.dsphoto"
       name="DS Photo"
       version="1.1.0"
       provider-name="Leonid Mokrushin">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
             provides="image"
             library="default.py">
    <provides>image</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Провайдер контента из Synology Photos</summary>
    <description>
      Быстрое пролистывание и просмотр фотографий и видео из Synology Photos
    </description>
    <assets>
      <icon>icon.png</icon>
    </assets>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.kartinatv"
       name="KartinaTV"
       version="1.0.9"
       provider-name="Leonid Mokrushin">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
             provides="video"
             library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Онлайн-телевидение Kartina.TV</summary>
    <description>
      Интернет-телевидение в любой точке мира: более 150 каналов, видеотека, архив, мультирум
    </description>
    <assets>
      <icon>icon.png</icon>
    </assets>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.likelion"
       name="Likelion Kodi Add-ons"
       version="1.0.5"
       provider-name="Leonid Mokrushin">
	<extension point="xbmc.addon.repository" name="Likelion Kodi Add-ons">
		<info compressed="false">https://raw.githubusercontent.com/likelion/kodi-addons/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/likelion/kodi-addons/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/likelion/kodi-addons/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install Add-ons from Likelion Kodi Add-on Repository</summary>
		<description>Addons for Kodi</description>
		<disclaimer>Various useful Kodi add-ons</disclaimer>
                <assets>
   			<icon>icon.png</icon>
    		</assets>
		<platform>all</platform>
	</extension>
</addon>
</addons>
