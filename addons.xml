<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.kartinatv"
       name="KartinaTV"
       version="1.0.0"
       provider-name="Leonid Mokrushin">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
             provides="video"
             library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Онлайн-телевидение Kartina.TV</summary>
    <description>
      Интернет-телевидение в любой точке мира: более 150 каналов, видеотека, архив, мультирум
    </description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.likelion" name="Likelion Kodi Add-ons" version="1.0.0" provider-name="Leonid Mokrushin">
	<extension point="xbmc.addon.repository" name="Likelion Kodi Add-ons">
		<info compressed="false">https://github.com/likelion/kodi-addons/raw/master/addons.xml</info>
		<checksum>https://github.com/likelion/kodi-addons/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">https://github.com/likelion/kodi-addons/raw/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install Add-ons from Likelion Kodi Add-on Repository</summary>
		<description>Addons for Kodi</description>
		<disclaimer>Various useful Kodi add-ons</disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
